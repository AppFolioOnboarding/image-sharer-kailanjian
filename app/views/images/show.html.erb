<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <% if flash[:success] %>
                <div class="alert alert-success">
                    <%= flash[:success] %>
                </div>
            <% end %>
            <h1 class="mt-5">Just Submitted:</h1>
            <img class="display-image" src=<%= @image.link %> />
            <div><%= link_to "Home", root_path %></div>
            <div><%= link_to "Submit another image", new_image_path %></div>
        </div>
    </div>
</div>
