<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1>Hello, world</h1>
            <%= link_to "Submit link", new_image_path %>
            <br />
            <br />
            <table class="table">
                <thead>Images</thead>
                <ul class="list-group">
                    <% @images.each do |image| %>
                        <li class="list-group-item">
                        <img class="display-image" src=<%= image.link %> />
                        <br />
                        <% image.tag_list.each do |tag| %>
                            <span class="badge badge-primary"><%= tag %></span>
                        <% end%>
                        </li>
                    <% end %>
                </ul>
            </table>
        </div>
    </div>
</div>
